---
const { background, width, site, linkText, linkInfo } =
    Astro.props
---

<div
    class={`flex items-center justify-center m-6 group w-auto relative ${width}`}>
    <div
        class="w-6 h-52 bg-lightgreen absolute -top-5 -left-5">
    </div>
    <div
        class="w-52 h-6 bg-lightgreen absolute -top-5 -left-5">
    </div>
    <div
        class="w-6 h-16 bg-green absolute -bottom-5 overflow-hidden -right-5 group-hover:h-52 transition-all ease-linear">
    </div>
    <div
        class="w-16 h-6 bg-green absolute -bottom-5 -right-5 group-hover:w-52 transition-all ease-linear">
    </div>
    <a
        href={site}
        class={`flex flex-col justify-between items-end bg-cover w-full z-10 h-96 bg-black/50 bg-blend-multiply text-white group-hover:bg-black/70 rounded-lg ${background}`}>
        <slot />
        <div
            class="h-18 w-auto p-3 text-white flex items-center justify-end group relative">
            <div class="flex flex-col">
                <span class="font-bold">{linkText}</span>
                <span
                    class="hidden text-sm group-hover:block">
                    {linkInfo}
                </span>
            </div>
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="1em"
                height="1em"
                viewBox="0 0 24 24"
                class="text-5xl">
                <path
                    fill="currentColor"
                    d="M7.15 21.1q-.375-.375-.375-.888q0-.512.375-.887L14.475 12l-7.35-7.35q-.35-.35-.35-.875t.375-.9q.375-.375.888-.375q.512 0 .887.375l8.4 8.425q.15.15.213.325q.062.175.062.375t-.062.375q-.063.175-.213.325L8.9 21.125q-.35.35-.862.35q-.513 0-.888-.375Z">
                </path>
            </svg>
        </div>
    </a>
</div>
