---
const { number, title, text } = Astro.props
---

<div class="flex flex-col space-y-4 p-2 sm:w-1/2 w-full">
    <div
        class="flex flex-row items-center h-full z-20 space-x-4">
        <div
            class="relative flex ml-1 w-9 h-9 text-4xl font-semibold">
            <div
                class="w-1 h-4 bg-green absolute -top-1 -left-1">
            </div>
            <div
                class="w-4 h-1 bg-green absolute -top-1 -left-1">
            </div>
            <div
                class="w-1 h-4 bg-green absolute -bottom-1 -right-1">
            </div>
            <div
                class="w-4 h-1 bg-green absolute -bottom-1 -right-1">
            </div>
            <span
                class="flex items-center justify-center h-full w-full">
                {number}
            </span>
        </div>
        <div
            class="flex items-center text-2xl h-12 font-semibold">
            {title}
        </div>
    </div>
    <div class="flex flex-row w-full space-x-2">
        <div class="mx-5 h-full">
            <div class="bg-slate-300 w-0.5 h-full mx-auto">
            </div>
        </div>
        <p class="text-lg text-slate-600">
            {text}
        </p>
    </div>
</div>
