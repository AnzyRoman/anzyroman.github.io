---
import SmallButton from 'components/SmallComponents/SmallButton.astro'

const { number, title, text, button } = Astro.props
---

<div
    class="flex flex-row w-full space-x-4 items-center justify-center md:h-56">
    <div
        class="flex self-start items-center justify-center w-1/6 text-5xl pt-8">
        <span
            class="flex relative w-16 h-16 items-center justify-center font-semibold">
            <div
                class="w-2 h-10 bg-green absolute -top-1 -left-1 overflow-hidden">
            </div>
            <div
                class="w-10 h-2 bg-green absolute -top-1 -left-1 overflow-hidden">
            </div>
            <div
                class="w-2 h-10 bg-green absolute -bottom-1 -right-1 overflow-hidden">
            </div>
            <div
                class="w-10 h-2 bg-green absolute -bottom-1 -right-1 overflow-hidden">
            </div>
            {number}
        </span>
    </div>
    <div
        class="flex w-5/6 space-y-2 px-10 pt-7 h-full from-green/50 bg-gradient-to-r">
        <div class="flex flex-col space-y-2">
            <h2 class="font-bold text-3xl lg:text-xl">
                {title}
            </h2>
            <p class="text-justify pb-2">
                {text}
            </p>

            {
                button && (
                    <SmallButton
                        link={button.href}
                        text={button.text}
                    />
                )
            }
        </div>
    </div>
</div>
